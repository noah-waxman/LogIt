<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_cell_view"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_margin="10dp"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp"
        app:cardBackgroundColor="#fffcfc"
        android:foreground="#00000000"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/workout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:text="placeholder"
                android:textColor="@color/black"
                android:textSize="29sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/rep_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="placeholder rep text"
                android:textSize="25sp"
                android:textColor="#666666"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/workout_name"
                android:translationY="-5dp"
                >

            </TextView>

            <TextView
                android:id="@+id/weight_amt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="placeholder rep text"
                android:textSize="25sp"
                android:textColor="#666666"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/rep_amt"
                android:translationY="-10dp"
                >

            </TextView>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>